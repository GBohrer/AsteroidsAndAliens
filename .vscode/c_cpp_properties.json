{
    "configurations": [
        {
            "name": "windows-cygwin-gcc-x64",
            "includePath": [
                "C:/raylib/raylib/src/**",
                "${workspaceFolder}/**"
            ],
            "compilerPath": "C:/raylib/w64devkit/bin/gcc.exe",
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE",
                "GRAPHICS_API_OPENGL_33",
                "PLATFORM_DESKTOP"
            ],
            "cStandard": "${default}",
            "cppStandard": "${default}",
            "intelliSenseMode": "windows-gcc-x64",
            "configurationProvider": "ms-vscode.makefile-tools",
            "compilerArgs": [
                "-IC:/raylib/raylib/include",
                "-LC:/raylib/raylib/lib",
                "-lraylib"
            ]
        }
    ],
        
    "version": 4
}